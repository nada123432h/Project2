<?xml version="1.0" encoding="utf-8" ?>
<Controls:CustomPage  xmlns:Controls="clr-namespace:amazon.Controls" 
                      xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="amazon.Views.Item_Page"
                      Title="itempage"
                      x:Name="page">
    <ContentPage.Content>
        <StackLayout>
            <Controls:Toolbar Title="{Binding Title,Source={x:Reference page }}" 
                              Hasmenu="False"></Controls:Toolbar>

        </StackLayout>
    </ContentPage.Content>
</Controls:CustomPage>